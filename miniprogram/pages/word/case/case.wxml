<!--pages/word/case/case.wxml-->
<view class='flex_container'>
  <view class="word_content">
    <text class="word_content_text">{{wordset[serial].content}}\n</text>
    <text class="word_content_hint">请选择正确的含义</text>
  </view>
  <block wx:for="{{shuffled.anwserCollection}}">
  <button class="anwser_item" type="default" bindtap="selectAnwser">{{item}}</button>
  </block>
  <view>
    <button type="primary" bindtap="nextWord">下一词</button>
  </view>
</view>
